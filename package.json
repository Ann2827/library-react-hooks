{
  "name": "library-react-hooks",
  "version": "0.18.0",
  "description": "React hooks library",
  "author": "Ann Bystrova <ann.bystrova96@mail.ru>",
  "license": "MIT",
  "repository": "https://github.com/Ann2827/library-react-hooks",
  "keywords": [
    "react",
    "hooks",
    "hook",
    "library",
    "admin",
    "toast",
    "message",
    "useToast",
    "useMessage",
    "loader",
    "useLoader",
    "useTimer",
    "timer"
  ],
  "type": "module",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && rollup -c",
    "start": "rollup -c -w",
    "test": "run-s test:lint test:unit",
    "test:lint": "eslint './src/**/*.{ts,tsx}'",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn build",
    "deploy": "gh-pages -d example/build",
    "create": "plop --plopfile ./.plop/plop.config.cjs",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@semantic-release/git": "10.0.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/prop-types": "^15.7.5",
    "@types/react": "^16.9.27",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "gh-pages": "^2.2.0",
    "plop": "^3.1.0",
    "prettier": "^3.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-scripts": "^5.0.0",
    "react-test-renderer": "^17.0.0",
    "rollup": "^3.26.3",
    "rollup-plugin-bundle-analyzer": "^1.6.6",
    "semantic-release": "^19.0.5",
    "typescript": "^5.1.6",
    "yarn-audit-fix": "^9.3.8",
    "yarn-run-all": "^3.1.1"
  },
  "files": [
    "dist"
  ]
}
