{
  "name": "library-react-hooks",
  "version": "0.13.0",
  "description": "React hooks library",
  "author": "Ann Bystrova <ann.bystrova96@mail.ru>",
  "license": "MIT",
  "repository": "https://github.com/Ann2827/library-react-hooks",
  "keywords": [
    "react",
    "hooks",
    "hook",
    "library",
    "admin",
    "toast",
    "message",
    "useToast",
    "useMessage",
    "loader",
    "useLoader"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14",
    "npm": ">=8"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "test": "run-s test:unit test:lint",
    "test:lint": "eslint -c .eslintrc --ext .ts,.tsx . --fix",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn build",
    "deploy": "gh-pages -d example/build",
    "create": "plop --plopfile ./.plop/plop.config.js"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/prop-types": "^15.7.5",
    "@types/react": "^16.9.27",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "plop": "^3.1.0",
    "prettier": "^2.0.4",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-scripts": "^5.0.0",
    "react-test-renderer": "^17.0.0",
    "typescript": ">=3.9.10",
    "yarn-run-all": "^3.1.1"
  },
  "files": [
    "dist"
  ]
}
